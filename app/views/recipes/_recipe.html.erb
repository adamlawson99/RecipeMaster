    <strong class="block font-medium mb-1">Title:</strong>
    <%= recipe.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= recipe.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Short description:</strong>
    <%= recipe.short_description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Categories:</strong>
    <%= recipe.categories %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tags:</strong>
    <%= recipe.tags %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Servings:</strong>
    <%= recipe.servings %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Ingredients:</strong>
    <%= recipe.ingredients %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Instructions:</strong>
    <%= recipe.instructions %>
